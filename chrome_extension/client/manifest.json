{
    "name": "Song To Anki",
    "version": "1.0",
    "description": "Find your favorite foreign-language song on lyricstranslate.com and generate an Anki space-repetition flashcard set to learn all the words!",
    "permissions": ["tabs", "activeTab", "declarativeContent", "storage", "unlimitedStorage", "<all_urls>", "downloads"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
          }
    },
    "icons": {
      },
    "manifest_version": 2
  }